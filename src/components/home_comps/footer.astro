---
import { Icon } from "astro-icon/components";
import HeroImage from "./hero-image.astro";
import type { FooterLink } from "../../types.ts";

const links: Array<FooterLink> = [
  {
    url: "https://github.com/Keshav-writes-code",
    description: "View Profile on GitHub",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://www.linkedin.com/in/keshav-dhiman-547b5b238/",
    description: "Me on LinkedIn",
    icon: "fa-brands:linkedin",
  },
];
---

<footer class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-2 gap-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex size-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
            target="_blank"
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="size-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
