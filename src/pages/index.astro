---
import NN_parameters from '../components/NN_comps/NN_parameters.svelte';
import NN_layers from '../components/NN_comps/NN_layers.svelte';
import NN_specs from '../components/NN_comps/NN_specs.svelte';
import NN_IOgraph from '../components/NN_comps/NN_IOgraph.svelte';

---

<html lang="en" data-theme="business">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/NeuralNetBuilder/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>NeuralNetBuilder</title>
	</head>
	<body class="w-full grid place-items-center" >
		<main class="w-full grid place-items-center *:sm:px-10 *:px-5 sm:py-10 py-5">
			<section
			  class="w-full flex sm:gap-20 gap-5 xl:flex-row flex-col-reverse justify-between items-center"
			>
			  <NN_parameters  client:visible/>
			  <NN_IOgraph  client:visible/>
			</section>
			<section class=" w-full 2xl:max-w-[1530px] max-w-90vw sm:mt-10 mt-2">
        <div class="divider max-w-50% mx-auto "></div>		  
        <NN_specs client:visible/>
        <NN_layers client:visible/>
			</section>
    </main>
	</body>
</html>
<script>
import { af_enum } from "../components/NN_comps/NN_classes"
import { getPreference } from "../lib/db/localStorage"
const activaFunc = getPreference<af_enum>("activation_function") || af_enum.relu
const activationFns = [
  {
    name: af_enum.relu,
    theme: "business",
  },
  {
    name: af_enum.sigmoid,
    theme: "dark",
  },
  {
    name: af_enum.tanh,
    theme: "forest",
  },
  {
    name: af_enum.binary,
    theme: "black",
  },
];
document.documentElement.setAttribute(
  "data-theme",
  activationFns.find((fn) => fn.name == activaFunc)?.theme || "",
);
</script>
